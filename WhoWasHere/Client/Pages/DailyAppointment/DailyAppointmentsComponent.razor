

@if (_appointments != null)
{
    if (_appointments.Count() == 0)
    {
        <p>No appointment </p>
    }
    else
    {

        <table class="table">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Phone</th>
                    <th>Start appointment</th>
                    <th>End appointment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in _appointments)
                {
                    <tr>
                        <td>@appointment.customer.GetFullName()</td>
                        <td>@appointment.customer.PhoneNumber</td>
                        <td>@appointment.StartAppointment</td>
                        <td>@appointment.EndAppointment</td>
                        <td>
                            <button class="oi oi-trash btn btn-danger" @onclick="@(e => Delete(@appointment))">
                                Delete
                            </button>
                            @*<button class="oi oi-trash btn btn-danger" @onclick="@(e => Modify(@appointment))">
                                    Modify
                                </button>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <WhoWasHere.Client.Shared.AppointmentInserction.AppointmentAdding  RegistrationEventCallback="ReloadList" Day="@DateTime.Now"></WhoWasHere.Client.Shared.AppointmentInserction.AppointmentAdding>

}
else
{

    <WhoWasHere.Client.Pages.Loader.Loding></WhoWasHere.Client.Pages.Loader.Loding>
}