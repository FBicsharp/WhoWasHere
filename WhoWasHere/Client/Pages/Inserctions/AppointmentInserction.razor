
@page "/AppointmentInserction"

@if (ShowDialog)
{

    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Add Appointment</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@appointment" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="form-group">
                            <label for="lastName">Customer: </label>
                            <select @bind="customerList">                                
                                    @foreach (var cnt in customerList)
                                    {
                                        <option value="@cnt.Id">@cnt.GetFullName()</option>
                                    }
                            </select>
                            <ValidationMessage For="@(() => appointment.IdCustomer)" />
                        </div>

                        <div class="form-group">
                            <label for="start">Start hour: </label>
                            <InputDate  id="start" class="form-control" @bind-Value="@appointment.StartAppointment" placeholder="Start hour"></InputDate>
                            <ValidationMessage For="@(() => appointment.StartAppointment)" />
                        </div>
                        <div class="form-group">
                            <label for="end">End hour: </label>
                            <InputDate id="end" class="form-control" @bind-Value="@appointment.EndAppointment" placeholder="End hour"></InputDate>
                            <ValidationMessage For="@(() => appointment.EndAppointment)" />
                        </div>



                        <button type="submit" class="btn btn-primary">Save appointment</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}  